{
  "name": "leetcode-habit",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build:firefox": "tsc && cross-env BROWSER=firefox vite build && $npm_execpath run build:step:all",
    "build:chrome": "tsc && cross-env BROWSER=chrome vite build && $npm_execpath run build:step:all",
    "build:step:all": "$npm_execpath run build:step:content && $npm_execpath run build:step:background && $npm_execpath run build:step:inject",
    "build:step:content": "tsc && vite build --config vite.content.config.ts",
    "build:step:background": "tsc && vite build --config vite.background.config.ts",
    "build:step:inject": "tsc && vite build --config vite.inject.config.ts",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "start": "web-ext run --source-dir ./dist/"
  },
  "dependencies": {
    "cross-env": "^7.0.3",
    "web-ext": "^8.2.0",
    "webextension-polyfill": "^0.12.0"
  },
  "devDependencies": {
    "@types/webextension-polyfill": "^0.10.7",
    "@typescript-eslint/eslint-plugin": "^7.0.2",
    "@typescript-eslint/parser": "^7.0.2",
    "eslint": "^8.56.0",
    "typescript": "^5.2.2",
    "vite": "^5.1.4"
  }
}
